<script>
    $(function(){
        $('.personal').addClass("highlight");
        $('#tab-2').hide();
        $('#tab-3').hide();
        $('#tab-4').hide();

        $('.personal').click(function() {
            $('.personal').addClass("highlight");
            $('.account').removeClass("highlight");
            $('.payment').removeClass("highlight");
            $('.invite').removeClass("highlight");


            $('#tab-1').show();
            $('#tab-2').hide();
            $('#tab-3').hide();
            $('#tab-4').hide();

        });

        $('.account').click(function() {
            $('.account').addClass("highlight");
            $('.personal').removeClass("highlight");
            $('.payment').removeClass("highlight");
            $('.invite').removeClass("highlight");


            $('#tab-1').hide();
            $('#tab-2').show();
            $('#tab-3').hide();
            $('#tab-4').hide();
        });

        $('.payment').click(function() {
            $('.payment').addClass("highlight");
            $('.personal').removeClass("highlight");
            $('.account').removeClass("highlight");
            $('.invite').removeClass("highlight");

            $('#tab-1').hide();
            $('#tab-2').hide();
            $('#tab-3').show();
            $('#tab-4').hide();
        });

        $('.invite').click(function() {
            $('.invite').addClass("highlight");
            $('.personal').removeClass("highlight");
            $('.account').removeClass("highlight");
            $('.payment').removeClass("highlight");

            $('#tab-1').hide();
            $('#tab-2').hide();
            $('#tab-3').hide();
            $('#tab-4').show();
        });
    });

</script>

<div class="column-wrapper l-app">
  <div class="column column-navbar">
    <%= render 'shared/navbar' %>
  </div>

  <div class="column column-collection">
    <div class="column-heading">Settings</div>

    <div class="list">
      <div class="settings-row-heading">Personal Settings</div>
      <div class="list-item personal">
        <%= render 'row', title: 'Personal Information', meta: 'Name, Email, Avatar, Blankie Size' %>
      </div>

      <div class="settings-row-heading">Account Settings</div>

      <div class="list-item account">
        <%= render 'row', title: 'Admin', meta: 'Company Settings etc.' %>
      </div>

      <div class="list-item payment">
        <%= render 'row', title: 'Payment', meta: 'Pay the bills, or else.' %>
      </div>

      <div class="list-item invite">
        <%= render 'row', title: 'Invite', meta: 'Invite more homies.' %>
      </div>
    </div>
  </div>

  <div id="tab-1" class="column column-detail">
    <div class="settings-heading">
      <div class="summary">Personal Information</div>
      <div class="meta">This is the information that makes you unique inside.  Treasure your inner animal.</div>
    </div>

    <div class="settings-content">
        <%= render 'personal_details' %>
    </div>
  </div>

  <div id="tab-2" class="column column-detail">
    <div class="settings-heading">
      <div class="summary">Account Information</div>
      <div class="meta">Admin things and stuff.</div>
    </div>

    <div class="settings-content">
         <p>To try out Helpful website, run this command in your terminal:</p>

        <pre>
            <code>
            curl -X POST <%= root_url %>api/messages \
            --data "account=<%= @account.slug %>" \
            --data "email=user@example.com" \
            --data "content=I need help please."
            </code>
        </pre>


        <%= render 'account_details' %>
    </div>
  </div>

  <div id="tab-3" class="column column-detail">
    <div class="settings-heading">
      <div class="summary">Payment</div>
      <div class="meta">This is the information that makes you unique inside.  Treasure your inner animal.</div>
    </div>
  </div>

  <div id="tab-4" class="column column-detail">
    <div class="settings-heading">
      <div class="summary"><%= t "devise.invitations.new.header" %></div>
      <div class="meta">Add additional team members here.</div>
    </div>

    <div class="settings-content">
      <%= render 'invite' %>
    </div>
  </div>

</div>

